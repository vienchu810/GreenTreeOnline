<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        app:navigationIcon="@drawable/ic_detail_back"
        app:title="Thanh Toán"
        app:titleTextColor="#000000"></androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/donhang">

                    </ImageView>

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Đơn hàng"
                        android:textColor="#000000"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/donhang"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_location_on_black_24dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="Địa chỉ nhận hàng"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"

                        android:text="(Nhấp để chọn)"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="354dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="369dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tthoten"
                                android:layout_width="114dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Chử Văn Viên "
                                android:textColor="#000000"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/ttsdt"
                                android:layout_width="234dp"
                                android:layout_height="wrap_content"
                                android:text="(+84)979951954"
                                android:textColor="#000000"></TextView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>


                        <TextView
                            android:id="@+id/ttdc"
                            android:layout_marginTop="5dp"
                            android:layout_width="348dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="20dp"
                            android:text="Số 30, Xóm Chùa Dộc, Thôn Đại, Phụng Công, Văn Giang, Hưng Yên"
                            android:textColor="#000000"></TextView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/ttkhachhang"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text=">"
                        android:textColor="#C803A9F4">

                    </Button>
                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@drawable/ke">

    </ImageView>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_baseline_shopping_basket_24">
                    </ImageView>

                    <TextView
                        android:id="@+id/sospdamua"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Sản Phẩm"
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="313dp"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lvthanhtoan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"></ListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Đơn vị vận chuyển"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/chondv"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:background="#00000000"

                        android:text="(Nhấp để chọn)"
                        android:textSize="10dp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="232dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/nen2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/tich">

                            </ImageView>

                            <Spinner
                                android:id="@+id/vanchuyen"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:layout_marginTop="5dp"></Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#000000"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="Giao hàng nhận tiền"
                                android:textColor="#000000"
                                android:textSize="10dp"
                                android:textStyle="italic">

                            </TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Tạm tính "
                            android:textColor="#000000">

                        </TextView>

                        <TextView

                            android:layout_width="268dp"
                            android:layout_height="wrap_content"
                            android:text="(Chưa cộng phí)"
                            android:textColor="#A7A3A3"
                            android:textStyle="italic">

                        </TextView>

                        <TextView
                            android:id="@+id/tamtinh"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"

                            android:text=""
                            android:textColor="#A39D9D"
                            android:textStyle="italic">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="328dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Phí vận chuyển:"
                            android:textColor="#000000">

                        </TextView>

                        <TextView
                            android:id="@+id/tvphisip"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"

                            android:text="30000đ"
                            android:textColor="#A39D9D"
                            android:textStyle="italic">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tổng Tiền:"
                    android:textColor="#F44336"
                    android:textStyle="bold">

                </TextView>


                <TextView
                    android:id="@+id/sotien"
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#F44336"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="(Đã bao gồm cả phí vận chuyển)"
                    android:textColor="#B4ADAC"
                    android:textSize="10dp"
                    android:textStyle="italic">

                </TextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/bthoadon"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:text="Thanh Toán"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#00BCD4"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>