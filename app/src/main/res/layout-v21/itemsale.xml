<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        android:id="@+id/cardView">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="124dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center">


                    <ImageView
                        android:id="@+id/img_sanpham"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/plant_item_image_height"
                        android:contentDescription="@string/a11y_plant_item_image"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                         />

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="47dp"
                        android:layout_height="42dp"
                        android:layout_gravity="top|right"
                        android:src="@drawable/sale" />

                    <TextView
                        android:id="@+id/sale"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_marginTop="13dp"
                        android:text="-20%"
                        android:textColor="#F44336"
                        android:textSize="10dp"
                        android:textStyle="bold"

                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvTenSpsale"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tên cây"
                    android:textColor="#207307"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="147dp"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/tvGiacu"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Giá "

                            android:textColor="#A79695"
                            android:textSize="10sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="------------"
                            android:textColor="#A79695"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvGiamoisale"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Giá "
                        android:textColor="#f10"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>